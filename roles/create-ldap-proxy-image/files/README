# Run this projetc only in the ubuntu server 18.04 because of this project will use local repository.
# On Host server

apt update -y
apt install docker-ce docker-ce-cli docker-compose containerd.io -y
systemctl restart docker

mkdir /opt/openldap_proxy
mv /home/ubuntu/openldap_proxy.tar /opt/openldap_proxy
cd /opt/openldap_proxy/
docker load -i openldap_proxy.tar

docker run -it -d --name openldap_proxy --network host openldap_proxy /bin/bash
OR
docker-compose up -d


#############################################################

# on your Desktop

apt update -y
apt install docker-ce docker-ce-cli docker-compose containerd.io -y
systemctl restart docker

mkdir /opt/openldap_proxy
cd /opt/openldap_proxy
docker build -t openldap_proxy .

docker images
docker image save -o openldap_proxy.tar openldap_proxy

rsync -avr --progress openldap_proxy.tar ldap-proxy:/home/ubuntu/
